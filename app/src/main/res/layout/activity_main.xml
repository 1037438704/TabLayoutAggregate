<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ninetaildemonfox.tablayoutaggregate.aty.MainActivity">
    <FrameLayout
        android:id="@+id/main_center_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rb"
            style="@style/main_tab_bottom_style_app"
            android:drawableTop="@drawable/selector_index_tab"
            android:text="@string/main_tab_1" />

        <RadioButton
            android:id="@+id/qr_scan_rb"
            style="@style/main_tab_bottom_style_app"
            android:drawableTop="@drawable/selector_discount_tab"
            android:text="@string/main_tab_2" />

        <RadioButton
            android:id="@+id/my_order_rb"
            style="@style/main_tab_bottom_style_app"
            android:drawableTop="@drawable/selected_group_tab"
            android:text="@string/main_tab_3" />

        <RadioButton
            android:id="@+id/profile_rb"
            style="@style/main_tab_bottom_style_app"
            android:drawableTop="@drawable/selector_mine_tab"
            android:text="@string/main_tab_5" />

    </RadioGroup>

</LinearLayout>
